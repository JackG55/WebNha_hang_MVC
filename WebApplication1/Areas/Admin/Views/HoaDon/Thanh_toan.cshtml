<!-- Modal -->
<div class="modal " id="Thanh_toan">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">

            <div class="modal-header">
                <h1 class="modal-title" id="exampleModalLongTitle">Hoá đơn thanh toán</h1>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <form action="/HoaDon/Thanh_toan" method="post">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-lg-3">
                                <div class="form-group">
                                    <label for="ma_hoa_don">Mã hoá đơn</label>
                                    <input type="text" name="MaHoaDon" id="ma_hoa_don" class="form-control" placeholder="" value="@ViewBag.MaHoaDon" readonly>
                                </div>
                            </div>
                        </div>
                         <div class="row">
                            <div class="col-lg-9">
                                <div class="form-group">
                                    <label for="tong_tien">Tổng tiền</label>
                                    <input type="text" name="TongTien" id="tong_tien" class="form-control" placeholder="" value="@ViewBag.TongTien" readonly>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="control-group">
                                <div class="controls" style="margin-top:2rem">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal" style="margin-left:16rem">HUỶ</button>
                                    <button type="submit" class="btn btn-danger update" style="margin-left: 14rem">XÁC NHẬN</button>
                                </div>
                            </div>
                        </div>


                    </div>
                </form>
            </div>
        </div>
    </div>
</div>





