<!-- Modal -->
<div class="modal " id="Create_mon_an">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">

            <div class="modal-header">
                <h1 class="modal-title" id="exampleModalLongTitle">Thêm món ăn</h1>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <form action="/MonAn/Create_mon_an" method="post">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-lg-3">
                                <div class="form-group">
                                    <label for="ma_loai_mon">Mã loại món</label>
                                    <input type="text" name="MaLoaiMon" id="ma_loai_mon" class="form-control" placeholder="" value="@ViewBag.Data" readonly>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-3">
                                <div class="form-group">
                                    <label for="ma_mon_an">Mã món ăn</label>
                                    <input type="text" name="MaMonAn" id="ma_mon_an" class="form-control" placeholder="" value="@ViewBag.mamon" readonly>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-9">
                                <div class="form-group">
                                    <label for="ten_mon_an">Tên món ăn</label>
                                    <input type="text" name="TenMonAn" id="ten_mon_an" class="form-control" placeholder="" value="">
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-9">
                                <div class="form-group">
                                    <label for="mo_ta">Mô tả</label>
                                    <input type="text" name="MoTa" id="mo_ta" class="form-control" placeholder="" value="">
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-9">
                                <div class="form-group">
                                    <label for="gia_mon">Giá món</label>
                                    <input type="number" name="GiaMon" id="gia_mon" class="form-control" placeholder="" value="">
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-9">
                                <div class="form-group">
                                    <label for="gia_khuyen_mai">Giá khuyến mãi</label>
                                    <input type="number" name="GiaKhuyenMai" id="gia_khuyen_mai" class="form-control" placeholder="" value="">
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-9">
                                <div class="form-group">
                                    <label for="don_vi_tinh">Đơn vị tính</label>
                                    <input type="text" name="DonViTinh" id="don_vi_tinh" class="form-control" placeholder="" value="">
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-9">
                                <div class="form-group">
                                    <label for="hinh_anh">Hình ảnh</label>
                                    <input type="file" name="HinhAnh" id="HinhAnh" class="form-control-file " placeholder="" value="">
                                    <img src="~/Content/image/404.png" class="preview" style="display:inline-block;max-width:200px;max-height:100px;width: auto;height: auto; margin-left: 4rem; margin-top:2rem" />
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="control-group">
                                <div class="controls" style="margin-top:2rem">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal" style="margin-left:16rem">HUỶ</button>
                                    <button type="submit" class="btn btn-danger update" style="margin-left: 14rem">THÊM</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



<script>
    
    $(document).ready(function () {
        const ifile = document.getElementById("HinhAnh");
        const preview = document.getElementsByClassName("preview")[0];
        ifile.addEventListener("change", function () {
            const file = this.files[0];

            var src = URL.createObjectURL(file);
            preview.src = src;

        })
    })
    

</script>


