@using WebApplication1.Models;
@model IEnumerable<MonAn>



<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách món ăn
            </div>
            <div class="panel-body">
                <div class="row ">
                        
                    <button type="button" class="btn btn-success btn-add" style="margin: 0px 15px 15px 15px"  data-url="@Url.Action("Create_mon_an",new {  @ma_loai_mon = ViewBag.Data})">
                        <i class="fas fa-plus"></i>Thêm món ăn
                    </button>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th scope="col" class="th-sm">Mã món ăn</th>
                                <th scope="col" class="th-sm">Tên món ăn</th>
                                <th scope="col" class="th-sm">Mô tả</th>
                                <th scope="col" class="th-sm">Hình ảnh</th>
                                <th scope="col" class="th-sm">Giá món</th>
                                <th scope="col" class="th-sm">Giá khuyến mãi</th>
                                <th scope="col" class="th-sm">Trạng thái</th>
                                <th scope="col" class="th-sm">Đơn vị tính</th>
                                <th scope="col" class="th-sm"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (MonAn it in Model)
                            {
                                <tr>
                                    <td>@it.MaMonAn</td>
                                    <td>@it.TenMonAn</td>
                                    <td>@it.MoTa</td>
                                    <td><img src="~/Content/image/@it.HinhAnh" style="width:100px;height:100px"></td>
                                    <td>@it.GiaMon</td>
                                    <td>@it.GiaKhuyenMai</td>
                                    <td>@(it.TrangThai==1 ? "Đang còn" : "Bán hết") </td>
                                    <td>@it.DonViTinh</td>
                                    <td>
                                        <button type="button" data-target="#Edit_mon_an" class="btn-edit"
                                                data-url="@Url.Action("Edit_mon_an",new {  @ma_mon_an = it.MaMonAn})">
                                            <i class="fas fa-pencil-alt"></i>
                                        </button>



                                        <button type="button" class="btn-delete" data-url="@Url.Action("Delete_mon_an",new {  @ma_mon_an = it.MaMonAn})">
                                            <i class="fas fa-trash-alt">
                                            </i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>


</div>

<div id="Modal_partial"></div>

<script type="text/javascript">

    $(document).ready(function () {
        var place = $('#Modal_partial');
        $('.btn-edit').click(function () {
            var url = $(this).data('url');
            $.get(url).done(function (data) {
                place.html(data);
                place.find('.modal').modal('show');
                
            })
        })

        $('.btn-delete').click(function () {
            var url = $(this).data('url');
            $.get(url).done(function (data) {
                place.html(data);
                place.find('.modal').modal('show');

            })
        })

        $('.btn-add').click(function () {
            var url = $(this).data('url');
            $.get(url).done(function (data) {
                place.html(data);
                place.find('.modal').modal('show');

            })
        })
           
        })


</script>