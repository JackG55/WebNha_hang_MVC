<!DOCTYPE html>

<html>
<head>
    <!--Meta-->
    <meta charset="utf-8" />
    <meta name="viewport" content="width = device-width, initial-scale = 1, shrink-to-fit=no" />
    <title>@ViewBag.Title</title>
    <!--bootstrap link-->

    <link href="~/Areas/Admin/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>-->
    @*MetisMenu css
        <link rel="stylesheet" href="../../Content/metisMenu.min.css" />*@
    <!--Font Aweasome-->
    <script src="https://kit.fontawesome.com/58f62a05b5.js" crossorigin="anonymous"></script>
    <!--style css-->

    <link href="~/Areas/Admin/Content/css/style.css" rel="stylesheet" />

    <script src="~/Areas/Admin/Content/js/xuly.js"></script>

</head>
<body>
    <div id="wrapper">
        <!-- Navigation cac dieu huong chinh cua web - list cac chuc nang-->
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <div class="navbar-header">
                @Html.ActionLink("Trang chủ", "Index", "AdminHome", new { area = "" }, new { @class = "navbar-brand" })
            </div>

            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <ul class="nav navbar-right navbar-top-links">
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#user" aria-expanded="false">

                        <i class="fa fa-user fa-fw"></i> dusun <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu ">
                        <li>
                            <a href="#"><i class="fa fa-user fa-fw"></i>Thông tin cá nhân</a>
                        </li>
                        <li><a href="#"><i class="fa fa-gear fa-fw"></i>Cài đặt</a></li>
                        <li class="divider"></li>
                        <li><a href= "/DangNhap/LoginForm"><i class="fa fa-sign-out fa-fw"></i>Đăng xuất</a></li>
                    </ul>
                </li>
            </ul>
            <!--/.navbar-top-links-->
            <div class="navbar-default sidebar" role="navigation">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav" id="side-menu">
                        <li class="sidebar-search">
                            <!-- tao area search-->
                            <div class="input-group custom-search-form">
                                <input type="text" class="form-control" placeholder="Search...">
                                <span class="input-group-btn">
                                    <button class="btn btn-primary" type="button">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </span>
                            </div>
                        </li>
                        <li>
                            <a href="@Url.Action("Index","AdminHome")" @RenderSection("Setactive_index", false)>
                                <i class="fa fa-dashboard fa-fw"></i>
                                <span> Dashboard</span>
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("bill","HoaDon")" @RenderSection("Setactive_bill", false)>
                                <i class="fa fa-files-o fa-fw"></i>
                                <span> Hoá đơn</span>
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("table","AdminHome")" @RenderSection("Setactive_table", false)>
                                <i class="fas fa-table"></i>
                                <span> Bàn</span>
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("Index","MonAn")" @RenderSection("Setactive_menu", false)>
                                <i class="fas fa-bars"></i>
                                <span> Thực đơn</span>
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("client","AdminHome")" @RenderSection("Setactive_client", false)>
                                <i class="fa fa-users"></i>
                                <span> Khách hàng</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <!-- Xay dung khung nhin chung cho trang web-->
        <div id="page-wrapper">
            <div class="container-fluid">
                @RenderBody()
            </div>
        </div>
    </div>



</body>
</html>
