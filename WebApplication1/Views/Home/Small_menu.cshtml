@using WebApplication1.Models;
@model List<MonAn>


        @{
            int i = 0;
            var group = Model.GroupBy(x => Model.IndexOf(x) / 2).ToList();
            foreach (var parent in group)
            {
                i++;
                if (i % 2 == 1)
                {
                    foreach (MonAn mon in parent)
                    {

                        <div class="col-md-12 col-lg-6 d-flex align-self-stretch show-on-scroll">
                            <div class="menus d-sm-flex ftco-animate align-items-stretch">
                                <div class="menu-img img" style="background-image: url(/Content/Image/@mon.HinhAnh); height:auto"></div>
                                <div class="text d-flex align-items-center">
                                    <div>
                                        <div class="d-flex">
                                            <div class="one-half">
                                                <h3>@mon.TenMonAn</h3>
                                            </div>
                                        </div>
                                        <p>@mon.GiaMon</p>
                                        <p><a href="#" class="btn btn-primary">Đặt ngay</a></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else if (i % 2 == 0)
                {
                    foreach (MonAn mon in parent)
                    {

                        <div class="col-md-12 col-lg-6 d-flex align-self-stretch show-on-scroll">
                            <div class="menus d-sm-flex ftco-animate align-items-stretch">
                                <div class="menu-img img order-md-last" style="background-image: url(/Content/Image/@mon.HinhAnh); height:auto"></div>
                                <div class="text d-flex align-items-center">
                                    <div>
                                        <div class="d-flex">
                                            <div class="one-half">
                                                <h3>@mon.TenMonAn</h3>
                                            </div>

                                        </div>
                                        <p>@mon.GiaMon</p>
                                        <p><a href="#" class="btn btn-primary">Đặt ngay</a></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }

            }

        }




