@{
    Layout = null;
}

@using WebApplication1.Models;
@model List<DatMon_Image>


@if (Model.Count == 0)
{
    <div class="setfonttext">
        <i class="fas fa-info-circle"></i>
        <span class="setfontinfor">
            Ôi tiếc quá! Bạn chưa đặt món nào
        </span>
    </div>
   
}
else
{
    <div class="cart-row">
        <span class="cart-item-datmon cart-header cart-column">MÓN</span>
        <span class="cart-price-datmon cart-header cart-column">TIỀN</span>
        <span class="cart-quantity-datmon cart-header cart-column">SỐ LƯỢNG</span>
        <span class="cart-timedatmon cart-header cart-column">THỜI GIAN ĐẶT</span>
        <span class="cart-status-datmon cart-header cart-column">TRẠNG THÁI</span>
    </div>
    <div class="cart-items">
        @foreach (DatMon_Image it in Model)
        {
            <div class="cart-row">
                <div class="cart-item-datmon cart-column">
                    <img class="cart-item-image" src="/Content/Image/@it.HinhAnh" width="100" height="100">
                    <span class="cart-item-title">@it.TenMonAn</span>
                </div>
                <span class="cart-price-datmon cart-column">@it.Gia</span>

                <span class="cart-quantity-datmon cart-column">
                    @it.SoLuong
                </span>
                <span class="cart-timedatmon cart-column">@it.ThoiGian</span>
                <span class="cart-status-datmon cart-column">@it.TrangThai</span>
            </div>

        }
    </div>
    <div class="cart-total">
        <strong class="cart-total-title">Tổng</strong>
        <span class="cart-total-price"></span>
    </div>
}


