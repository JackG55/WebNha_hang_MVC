@{
    Layout = null;
}

@using WebApplication1.Models;
@model List<GioHang>


@if (Model.Count == 0)
{
    <div class="setfonttext">
        <i class="fas fa-info-circle"></i>
        <span class="setfontinfor">
            Ôi tiếc quá! Bạn chưa thêm món mới
        </span>
    </div>

}
else
{

    <div class="cart-row">
        <span class="cart-item cart-header cart-column">MÓN</span>
        <span class="cart-price cart-header cart-column">TIỀN</span>
        <span class="cart-quantity cart-header cart-column">SỐ LƯỢNG</span>
    </div>
    <div class="cart-items">
        @foreach (GioHang it in Model)
        {
            <div class="cart-row">
                <div class="cart-item cart-column">
                    <img class="cart-item-image" src="/Content/Image/@it.monAn.HinhAnh" width="100" height="100">
                    <span class="cart-item-title">@it.monAn.TenMonAn</span>
                </div>
                <span class="cart-price cart-column">@it.monAn.GiaMon</span>

                <div class="cart-quantity cart-column">
                    <input class="cart-quantity-input" type="number" min="1" value="@it.SoLuong" onchange="ThayDoiSoLuong(@it.monAn.MaMonAn)">
                    <button class="btn-danger" type="button" onclick="HuyMon(@it.monAn.MaMonAn)">HUỶ</button>
                </div>
            </div>

        }
    </div>
    <div class="cart-total">
        <strong class="cart-total-title">Tổng</strong>
        <span class="cart-total-price"></span>
    </div>
}

<script src="~/Content/Js/xulymonan_giohang.js"></script>