
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<!--header start-->
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title> Quản lý nhà hàng-Đăng nhập </title>
    <link href="~/Areas/Admin/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <!--MetisMenu css-->
    <link rel="stylesheet" href="../../Content/metisMenu.min.css" />
    <!--Font Aweasome-->
    <script src="https://kit.fontawesome.com/58f62a05b5.js" crossorigin="anonymous"></script>
    <!--style css-->
    <link href="~/Areas/Admin/Content/css/style.css" rel="stylesheet" />
</head>
<body>
    <form action="/DangNhap/LoginForm" method="post">
        <div class="container">
            <div class="panellogin">
                <h3>Đăng nhập</h3>
                <h4>Quản lý nhà hàng_Duc&Lien</h4>
            </div>

            <label>Tên đăng nhập : </label>
            <div class="login">
                <input type="text" placeholder="Nhập tên đăng nhập" name="TenDangNhap" required>
                <label>Mật khẩu : </label>
                <input type="password" placeholder="Nhập mật khẩu" name="MatKhau" required>
            </div>
            <div class="setbutton">
                <button type="submit">ĐĂNG NHẬP</button>
            </div>
            <div class="row">
                <div class="col-lg-8">
                    <input type="checkbox" checked="checked"> Nhớ tài khoản
                </div>
                <a href="#">Quên mật khẩu?</a>
            </div>



        </div>
    </form>
</body>
</html>  